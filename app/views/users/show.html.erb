<div class="row">
	<div class="col-md-3">
		<h2><%= @user.username %></h2>
		<h3><%= @user.email %></h3>
        <p>
        <% if signed_in? && current_user?(@user.id)%>
            <%= link_to 'Edit User', edit_user_path(@user) %> <br>
            <%= link_to 'Delete User', @user, method: :delete, data: {confirm: "Are you sure?"} %>
            <%= link_to 'Companies', companies_path(@user) %> <br>
        <% end %>
        </p>
	</div>
    <div class="col-md-6">
        <% if @company%>
            <h2>Information for <%=link_to @company.name, @company%></h2><br>
		    <%= render 'partials/form_for_post'%>
            <%= render @company.posts%>
        <% end %>
	</div>
</div>